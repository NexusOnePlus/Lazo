<Window x:Class="Lazo.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Width="450" Height="600" WindowStartupLocation="CenterScreen"
        Topmost="True" ShowInTaskbar="False" MouseDown="Window_MouseDown">

    <Window.Resources>
        <Style x:Key="MacToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                     Text="{TemplateBinding Content}" 
                                     VerticalAlignment="Center"
                                     Foreground="#E0E0E0"
                                     FontSize="14"/>

                            <Grid Grid.Column="1" Width="48" Height="28">
                                <Border x:Name="SwitchBackground" 
                                      CornerRadius="14"
                                      Background="#3A3A3A">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" 
                                                        Direction="270" 
                                                        ShadowDepth="1" 
                                                        BlurRadius="2" 
                                                        Opacity="0.3"/>
                                    </Border.Effect>
                                </Border>

                                <Canvas>
                                    <Ellipse x:Name="SwitchThumb" 
                                           Width="24" Height="24"
                                           Fill="White"
                                           Canvas.Left="2" Canvas.Top="2">
                                        <Ellipse.Effect>
                                            <DropShadowEffect Color="Black" 
                                                            Direction="270" 
                                                            ShadowDepth="1" 
                                                            BlurRadius="3" 
                                                            Opacity="0.4"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                </Canvas>
                            </Grid>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchBackground" Property="Background" Value="#7B61FF"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SwitchThumb"
                                                           Storyboard.TargetProperty="(Canvas.Left)"
                                                           To="22" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SwitchThumb"
                                                           Storyboard.TargetProperty="(Canvas.Left)"
                                                           To="2" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="SwitchBackground" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                              Padding="{TemplateBinding Padding}" 
                              CornerRadius="10" 
                              Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#353535"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="16" Background="#1E1E1E" BorderBrush="#444" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" BlurRadius="15" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="Configuración" 
                         FontSize="24" 
                         FontWeight="SemiBold"
                         Foreground="White" 
                         HorizontalAlignment="Left"/>
                <Rectangle Height="1" Fill="#333" Margin="0,15,0,0"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <CheckBox x:Name="StartupCheckBox"
                            Content="Iniciar con Windows" 
                            IsChecked="True"
                            Style="{StaticResource MacToggleSwitchStyle}"
                            Margin="0,0,0,25"
                            Checked="StartupCheckBox_Changed"
                            Unchecked="StartupCheckBox_Changed"/>

                    <CheckBox x:Name="AnimationCheckBox"
                            Content="Mostrar animación de inicio" 
                            IsChecked="True"
                            Style="{StaticResource MacToggleSwitchStyle}"
                            Margin="0,0,0,25"
                            Checked="AnimationCheckBox_Changed"
                            Unchecked="AnimationCheckBox_Changed"/>

                    <Rectangle Height="1" Fill="#2A2A2A" Margin="0,10,0,20"/>

                    <Button Content="Ver tutorial de nuevo"
                          Width="200"
                          Click="TutorialButton_Click"
                          Style="{StaticResource SecondaryButtonStyle}"
                          HorizontalAlignment="Stretch"
                          Margin="0,0,0,25"/>

                    <Grid Margin="0,0,0,25">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Margin="0,0,0,15">
                            <TextBlock x:Name="VersionText" 
                                     Text="v1.0.0" 
                                     FontSize="14" 
                                     Foreground="#A0A0A0" 
                                     HorizontalAlignment="Left" 
                                     Margin="0,0,0,5"/>
                            <Button x:Name="UpdateButton" 
                                  Click="UpdateButton_Click"
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="UpdateButtonText" Text="Check for Updates" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="UpdateSpinner" Text="⏳" Visibility="Collapsed" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1">
                            <TextBlock Text="Changelog:" 
                                     FontSize="14" 
                                     FontWeight="SemiBold"
                                     Foreground="White" 
                                     HorizontalAlignment="Left" 
                                     Margin="0,0,0,5"/>
                            <Border Background="#2A2A2A" 
                                  CornerRadius="8" 
                                  Padding="10"
                                  MaxHeight="100">
                                <TextBlock x:Name="ChangelogText" 
                                         Text="Fetching changelog..." 
                                         FontSize="12" 
                                         Foreground="#A0A0A0" 
                                         TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <Button Grid.Row="2" 
                  Content="Cerrar" 
                  Click="CloseButton_Click" 
                  Padding="30,12"
                  HorizontalAlignment="Center"
                  Style="{StaticResource PrimaryButtonStyle}"/>
        </Grid>
    </Border>
</Window>