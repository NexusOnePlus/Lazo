<Page x:Class="Lazo.TutorialPage3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="UsageGuide" Background="Transparent">
    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,0,0,0">
            <Border CornerRadius="12" Margin="0,0" ClipToBounds="True">
                <MediaElement x:Name="TutorialVideo" 
                            LoadedBehavior="Manual"
                            UnloadedBehavior="Stop"
                            Stretch="Uniform"
                            Volume="0"
                            MediaFailed="TutorialVideo_MediaFailed"/>
            </Border>

            <TextBlock Text="Crea un Temporizador" 
                       FontSize="26" 
                       FontWeight="Bold" 
                       Margin="0,30,0,0"
                       Foreground="#FFFFFF" 
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Haz clic izquierdo en el icono y arrastra el ratón. La distancia define el tiempo."
                       Foreground="#AAAAAA" 
                       TextWrapping="Wrap" 
                       Margin="40,15,40,30"
                       TextAlignment="Center" 
                       FontSize="16" 
                       LineHeight="24"/>

            <Button Content="¡Entendido!" 
                    Click="FinishButton_Click" 
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>