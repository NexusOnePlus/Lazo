<Window x:Class="Lazo.TimerPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False"
        Width="240" Height="100"
        ResizeMode="NoResize"
        SourceInitialized="Window_SourceInitialized"
        Loaded="Window_Loaded"
        ContentRendered="Window_ContentRendered"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent">
        <Border x:Name="MainBorder" Width="120" Height="42" CornerRadius="20" Background="#99000000"
                HorizontalAlignment="Center" VerticalAlignment="Top">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="14" ShadowDepth="0" Opacity="0.45"/>
            </Border.Effect>
            <Grid>
                <Ellipse x:Name="CenterFill" Width="10" Height="10" HorizontalAlignment="Center" VerticalAlignment="Center"
                         Fill="#2040E0FF" Opacity="0.9" RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <ScaleTransform ScaleX="0" ScaleY="0"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Run x:Name="MinutesRun" FontFamily="Segoe UI Variable Display Semibold" FontSize="26" Foreground="White" Text="0"/>
                    <Run Text="  :  " FontSize="26" Foreground="#B0FFFFFF"/>
                    <Run x:Name="SecondsRun" FontFamily="Segoe UI" FontSize="26" Foreground="#D0FFFFFF" Text="00"/>
                </TextBlock>
            </Grid>
        </Border>

        <Path x:Name="ProgressBgPath" Stroke="#202020" StrokeThickness="3" Opacity="0.35" IsHitTestVisible="False"/>

        <Path x:Name="ProgressPath" StrokeThickness="3" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Opacity="1.0" IsHitTestVisible="False">
            <Path.Effect>
                <DropShadowEffect Color="#FFD27A" BlurRadius="14" ShadowDepth="0" Opacity="0.8"/>
            </Path.Effect>
        </Path>
    </Grid>
</Window>