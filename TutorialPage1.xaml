<Page x:Class="Lazo.TutorialPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Welcome" Background="Transparent">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,50">
            <Border Width="80" Height="80" CornerRadius="18" Background="#222" Margin="0,0,0,30">
                <Image Source="/lazo_icon.ico" Stretch="Uniform" />
            </Border>

            <TextBlock Text="Bienvenido a Lazo" FontSize="32" FontWeight="Bold"
                       Foreground="#FFFFFF" HorizontalAlignment="Center"/>
            <TextBlock Text="La forma más rápida y elegante de crear un temporizador."
                       Foreground="#AAAAAA" TextWrapping="Wrap" Margin="40,15,40,40"
                       TextAlignment="Center" FontSize="16" LineHeight="24"/>

            <Button Content="Comenzar" Width="150" Click="NextButton_Click" Style="{StaticResource PrimaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>