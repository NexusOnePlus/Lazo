<Page x:Class="Lazo.TutorialPage2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PinningGuide" Background="Transparent">
    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,0,0,0">
            <Border  CornerRadius="12" Margin="0,0" ClipToBounds="True">
                <MediaElement x:Name="TutorialVideo"
                            LoadedBehavior="Manual"
                            UnloadedBehavior="Stop"
                            Stretch="Uniform"
                            Loaded="TutorialVideo_Loaded"
                            MediaEnded="TutorialVideo_MediaEnded"/>
            </Border>

            <TextBlock Text="Ancla el Icono" FontSize="26" FontWeight="Bold" Margin="0,30,0,0"
                       Foreground="#FFFFFF" HorizontalAlignment="Center"/>
            <TextBlock Text="Para un acceso rápido, arrastra el icono a la parte visible de tu bandeja de sistema."
                       Foreground="#AAAAAA" TextWrapping="Wrap" Margin="40,15,40,30"
                       TextAlignment="Center" FontSize="16" LineHeight="24"/>

            <Button Content="Siguiente" Click="NextButton_Click" Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>